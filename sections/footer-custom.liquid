<footer class="bbg-black bpt-24 bpb-24">
  <div class="page-width">
    <div class="bflex bflex-wrap lg:bflex-nowrap lg:bspace-x-4 bjustify-between">
      <div class="bw-full lg:bw-8/12 bflex bflex-wrap bgap-x-32 bgap-y-24">
        {% if linklists.footer-col-1.links %}
        <ul class="btext-beige">
          <li>
            <h3 class="btext-beige bmb-3 bfont-bold">{{ linklists.footer-col-1.title }}</h3>
          </li>
          {% for link in linklists.footer-col-1.links %}
          <li>
            <a href="{{ link.url }}" class="btext-beige hover:btext-honey btransition-colors">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
        {% if linklists.footer-col-2.links %}
        <ul>
          <li>
            <h3 class="btext-beige bmb-3 bfont-bold">{{ linklists.footer-col-2.title }}</h3>
          </li>
          {% for link in linklists.footer-col-2.links %}
          <li>
            <a href="{{ link.url }}" class="btext-beige hover:btext-honey btransition-colors">{{ link.title }}</a>
          </li>
          {%- endfor -%}
        </ul>
        {% endif %}
        {% if linklists.footer-col-3.links %}
        <ul>
          <li>
            <h3 class="btext-beige bmb-3 bfont-bold">{{ linklists.footer-col-3.title }}</h3>
          </li>
          {% for link in linklists.footer-col-3.links %}
          <li>
            <a href="{{ link.url }}" class="btext-beige hover:btext-honey btransition-colors">{{ link.title }}</a>
          </li>
          {%- endfor -%}
        </ul>
        {% endif %}
        <ul class="btext-beige bspace-y-2">
          <li>
            <h3 class="btext-beige bmb-3 bfont-bold">Connect with us</h3>
          </li>
          <li class="">
            <ul class="bflex bnowrap bgap-4 bmb-4">
              <li>
                <a href="{{ settings.social_facebook_link }}" class="bsocial-icon-link btext-beige bfill-current" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
              <li>
                <a href="{{ settings.social_facebook_link }}" class="bsocial-icon-link btext-beige bfill-current" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
              <li>
                <a href="{{ settings.social_facebook_link }}" class="bsocial-icon-link btext-beige bfill-current" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
              <li>
                <a href="{{ settings.social_facebook_link }}" class="bsocial-icon-link btext-beige bfill-current" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
            </ul>
          </li>
          {% if shop.phone %}
          <li>
            <a href="tel:{{ shop.phone }}">{{ shop.phone }}</a>
          </li>
          {% endif %}
          <li>
            <a href="#">
              {{ shop.address.street }}<br/>
              {{ shop.address.city }}, {{ shop.address.state }} {{ shop.address.zip }}
            </a>
          </li>
        </ul>
      </div>
      <div clas="bw-full lg:bw-4/12">
        <img src="https://via.placeholder.com/236x236" alt="">
      </div>
    </div>
  </div>
</footer>